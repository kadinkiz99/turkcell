
@{
    ViewData["Title"] = "Index";
}
@model List<ProductVM>
<h1>ÜRÜNLER</h1>
@if(TempData["status"] !=null)
{
    <div class="alert alert-primary" role="alert">
      @TempData["status"]
    </div>
    }
<td><a asp-controller="products" asp-action="Add">ÜRÜN EKLE</a></td>

<table class=" table" >

    <thead>
        <tr>
            <th>Id </th>
            <th>Name </th>
            <th>Price </th>
            <th>Stock </th>
            <th>Color </th>
            <th>IsPublish </th>
            <th>Expire </th>
            <th>Description </th>


         


        </tr>
  

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.color</td>
                @if (@item.IsPublish = false) 
                {
                    <td>HAYIR</td>
                }
                else
                {
                <td>EVET</td>

                }

                <td>@item.Expire</td>

                <td>
                 
                    @item.Description
                </td>

                <td><a asp-controller="products" asp-action="Remove" asp-route-id="@item.id">SİL</a></td>
                <td><a asp-controller="products" asp-action="Update" asp-route-id="@item.id">GÜNCELLE</a></td>

            </tr>
        }

    </tbody>
  
</table>

